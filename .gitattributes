# Auto detect text files and perform LF normalization
* text=auto

# Ensure these files always have LF endings (even on Windows)
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.c text eol=lf
*.gd text eol=lf
*.tscn text eol=lf
*.tres text eol=lf
*.gdshader text eol=lf
*.md text eol=lf
*.txt text eol=lf
CMakeLists.txt text eol=lf
*.cmake text eol=lf

# Windows-specific files should use CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.dll binary
*.so binary
*.dylib binary
*.exe binary
*.app binary
